@model CoreProject1.Models.Student

<div class="container">
    <br />
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.SuccessMessage
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-md-6" style="padding:23px;">
            <h2 class="text-center text-capitalize">Update The Library Record</h2>
            <br />
            <form method="post" asp-controller="StudentUtility" asp-action="UpdateStudentData" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" class="form-control" required />
                <div class="d-flex justify-content-evenly align-items-center">
                    <div style="width: 50%; ">
                        <div class="form-group">
                            <label class="control-label">First Name :</label>
                            <input asp-for="FirstName" class="form-control" disabled/>

                        </div>
                        <div class="form-group">
                            <label class="control-label">Class :</label>
                            <select asp-for="Class" class="form-control" disabled>
                                <option value="">Select Class</option>
                                @foreach (var item in Enum.GetValues(typeof(CoreProject1.Models.ClassName)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Fathers Name :</label>
                            <input asp-for="FatherName" class="form-control" disabled/>
                        </div>
                    </div>
                    <div style="width:50% ;">
                        <div class="form-group">
                            <label class="control-label">Mothers Name :</label>
                            <input asp-for="MotherName" class="form-control" disabled/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Email :</label>
                            <input asp-for="Email" class="form-control" disabled/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Remarks :</label>
                            <input asp-for="Remarks" class="form-control" disabled />
                        </div>
                    </div>
                </div>
                <br />
                <div class="d-flex justify-content-evenly align-items-center">
                    <div style="width: 50%;">
                        <div class="form-group">
                        </div>
                    </div>
                    <div style="width: 50%;display:flex;justify-content:end ">
                        <div class="form-group">
                            <a asp-controller="" asp-action="" class="btn btn-primary">Get Books</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
