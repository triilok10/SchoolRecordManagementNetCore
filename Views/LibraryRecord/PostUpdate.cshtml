@model CoreProject1.Models.Student
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}
<div class="container">
    <br />
    <div class="row justify-content-center">
        <div class="col-md-6" style="padding:23px;">
            <h2 class="text-center text-capitalize">Add New Book Info</h2>
            <br />
            <form method="post" asp-controller="LibraryRecord" asp-action="UpdateLibBooksPost">
                <input type="hidden" asp-for="Id" class="form-control" required />
                <div class="d-flex justify-content-evenly align-items-center">
                    <div style="width: 100%; ">
                        <div class="form-group">
                            <label class="control-label">Book Name :</label>
                            <input asp-for="BookName" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Book Author Name :</label>
                            <input asp-for="BookAuthorName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Book Medium :</label>
                            <select asp-for="BookMediumLanguage" class="form-control" required>
                                <option value="">Select Medium</option>
                                @foreach (var item in Enum.GetValues(typeof(CoreProject1.Models.BookMedium)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <br />
                <div class="d-flex justify-content-evenly align-items-center">
                    <div style="width: 50%;">
                        <div class="form-group">
                        </div>
                    </div>
                    <div style="width: 50%;display:flex;justify-content:end ">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
