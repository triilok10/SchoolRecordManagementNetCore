@model List<CoreProject1.Models.Student>
<br />

<div class="text-center" style="padding:10px">
    <br />
    <h2 class="text-danger"> View Student Record </h2>
    <table id="tbJquerytable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> ID </th>
                <th> Student Name </th>
                <th> Father's Name </th>
                <th> Mother's Name </th>
                <th> Class </th>
                <th> Gender </th>
                <th> Address </th>
                <th> Remarks </th>
                <th> Mobile </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Id </td>
                    <td> @item.FirstName @item.LastName</td>
                    <td> @item.FatherName </td>
                    <td> @item.MotherName </td>
                    <td> @item.Class</td>
                    <td> @item.Gender</td>
                    <td> @item.Address</td>
                    <td> @item.Remarks </td>
                    <td> @item.Mobile</td>
                </tr>
            }
        </tbody>
    </table>
</div>
